{% set user = comment.poster %}
{% set url = pimcore_url({'object': user}) %}
<li class="forum-reply">
    <div class="forum-header">
        <div>
            {% if user and user.image|default(false) %}
                <a href="{{ url }}">{{ user.image.thumbnail('profile-img-sm').html({'height': 45})|raw }}</a>
            {% endif %}
        </div>
        <div>
            <div class="forum-title">
                <h5><a href="{{ url }}">{{ user.username }}</a></h5>
            </div>
            <div class="forum-meta">
                <span>{{ user.plan ? user.plan.name : ('ucb.post.Free'|trans) }} {{ 'ucb.post.Member'|trans }}</span>
                {% if replyable|default(false) and app.user %}
                    <span><a href="#"><i class="fa fa-mail-reply-all"></i> Reply</a></span>
                {% endif %}
                {% if app.user and ('ROLE_UCB_ADMIN' in app.user.roles or (user and user.id == app.user.id)) %}
                    <span><a href="{{ path('ucb_comment_remove',{ 'id': comment.id, '_target_path': app.request.pathInfo ~ '#' ~ id }) }}"><i class="fa fa-trash"></i> {{ 'ucb.Delete Post'|trans }}</a></span>
                {% endif %}
            </div>
        </div>
        {% set creationDate = carbon().createFromTimestamp(comment.creationDate) %}
        <div><span>{{ creationDate.isToday() ? creationDate.format('H:i') : creationDate.formatLocalized('%B %d, %Y') }}</span></div>
    </div>
    <div class="forum-body">
        {{ comment.content|raw }}
    </div>
</li>